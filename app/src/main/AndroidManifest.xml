<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.synrgy.finalproject">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".ShonicApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Shonic"
        tools:targetApi="31">
        <activity
            android:name=".ui.SplashScreenActivity"
            android:exported="true"
            android:theme="@style/Theme.Shonic.SplashScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.auth.signup.SignUpActivity"
            android:exported="false"
            android:theme="@style/Theme.Shonic.WhiteStatusBar"
            android:windowSoftInputMode="adjustResize" />
        <activity
            android:name=".ui.auth.verification.VerificationActivity"
            android:exported="false"
            android:theme="@style/Theme.Shonic.WhiteStatusBar"
            android:windowSoftInputMode="adjustResize" />
        <activity
            android:name=".ui.auth.signup.CompleteRegisterActivity"
            android:exported="false"
            android:theme="@style/Theme.Shonic.WhiteStatusBar"
            android:windowSoftInputMode="adjustResize" />
        <activity
            android:name=".ui.auth.login.LogInActivity"
            android:exported="false"
            android:theme="@style/Theme.Shonic.WhiteStatusBar" />
    </application>

</manifest>