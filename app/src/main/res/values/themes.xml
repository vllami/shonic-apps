<resources>
    <style name="Theme.Shonic" parent="Theme.MaterialComponents.Light">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primary</item>
        <item name="colorOnPrimary">@color/primary</item>
        <item name="colorAccent">@color/primary</item>
        <!-- No action bar. -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Shonic.SplashScreen">
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/primary</item>
        <item name="android:windowLightStatusBar">false</item>
        <!-- Remove blank screen. -->
        <item name="android:colorBackground">@color/primary</item>
        <item name="android:windowDisablePreview">true</item>
    </style>

    <style name="Theme.Shonic.WhiteStatusBar">
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/white</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <style name="Theme.Shonic.PrimaryStatusBar">
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/primary</item>
        <item name="android:windowLightStatusBar">false</item>
    </style>

    <style name= "Button.MaterialComponents.Outlined" parent="Widget.MaterialComponents.Button.OutlinedButton.Icon">
        <item name="android:backgroundTint">@color/btn_primary_colors</item>
        <item name="android:background">@drawable/rounded_bg_button</item>
        <item name="android:backgroundTintMode">src_over</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorHint">?attr/colorOnPrimary</item>
        <item name="android:textColorLink">?attr/colorOnPrimary</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name= "Button.MaterialComponents.Google" parent="Widget.MaterialComponents.Button.OutlinedButton.Icon">
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:background">@drawable/rounded_bg_button_google</item>
        <item name="android:backgroundTintMode">src_over</item>
        <item name="android:textColor">@color/dark_gray</item>
        <item name="android:fontFamily">@font/opensans_regular</item>
        <item name="android:textColorHint">?attr/colorOnPrimary</item>
        <item name="android:textColorLink">?attr/colorOnPrimary</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="textStyleSmall" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#3E7BFA</item>
        <item name="lineSpacing">1sp</item>
    </style>

    <style name="textStyleMedium">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#3E7BFA</item>
        <item name="android:textStyle">bold</item>
        <item name="lineSpacing">1sp</item>
    </style>
</resources>