<resources>
    <!-- Base application theme. -->
    <style name="Theme.Shonic" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary_button</item>
        <item name="colorPrimaryVariant">@color/white</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <item name="android:windowLightStatusBar">?attr/colorOnPrimary</item>
        <!-- Customize your theme here. -->
    </style>

    <style name= "Button.MaterialComponents.Outlined" parent="Widget.MaterialComponents.Button.OutlinedButton.Icon">
        <item name="android:backgroundTint">@color/primary_button</item>
        <item name="android:background">@drawable/rounded_bg_button</item>
        <item name="android:backgroundTintMode">src_over</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorHint">?attr/colorOnPrimary</item>
        <item name="android:textColorLink">?attr/colorOnPrimary</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="textStyleSmall" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#3E7BFA</item>
        <item name="lineSpacing">1sp</item>
    </style>

    <style name="textStyleMedium">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#3E7BFA</item>
        <item name="android:textStyle">bold</item>
        <item name="lineSpacing">1sp</item>
    </style>
</resources>